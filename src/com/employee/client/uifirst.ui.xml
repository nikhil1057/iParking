<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui"
	 xmlns:ma="urn:import:gwt.material.design.addins.client">
	<ui:style>
.customFooter{
      padding-left: 0 !important;
      margin-bottom: 20px;
    }
	</ui:style>
	<g:HTMLPanel>
				<m:MaterialContainer>
				<m:MaterialHeader marginTop="0" paddingTop="0">
				<m:MaterialNavBar backgroundColor="BLUE_DARKEN_4" marginTop="1" paddingTop="1"  activates="sidenav">
				<m:MaterialNavBrand float="LEFT" text="iPARKING" fontSize="2.3em" marginLeft="16"/>
				<m:MaterialNavSection float="RIGHT">
				<m:MaterialLink ui:field="su" iconType="ACCOUNT_CIRCLE" iconPosition="LEFT" text="SIGN UP" textColor="WHITE" waves="LIGHT"/>
				<m:MaterialLink ui:field="si" iconType="ACCOUNT_CIRCLE" iconPosition="LEFT" text="SIGN IN" textColor="WHITE" waves="LIGHT"/>				
				</m:MaterialNavSection>
				</m:MaterialNavBar>				
				</m:MaterialHeader>
				<m:MaterialSlider ui:field="slider" duration="500" interval="1000">
				<m:MaterialSlideItem>
				<m:MaterialImage url="http://i.vimeocdn.com/video/465655166_1280x720.jpg"/>
				<m:MaterialSlideCaption textAlign="LEFT" textColor="WHITE">
								
				</m:MaterialSlideCaption>
				</m:MaterialSlideItem>	
				
				<m:MaterialSlideItem>
				<m:MaterialImage url="http://xdesktopwallpapers.com/wp-content/uploads/2012/12/Lots%20Of%20Cars%20Parked%20In%20Line.jpg"/>
				<m:MaterialSlideCaption textAlign="LEFT" textColor="WHITE">
				<m:MaterialTitle title="WE ARE HERE TO MAKE YOUR CAR REST AT A BETTER PLACE."
							description="" />				
				</m:MaterialSlideCaption>
				</m:MaterialSlideItem>	
							
				</m:MaterialSlider>
				<m:MaterialRow>
				<m:MaterialColumn grid="l12" shadow="4">
				<m:MaterialCard backgroundColor="WHITE">
				<m:MaterialCardContent textColor="BLACK">
				<m:MaterialCardTitle textColor="BLUE" text="About iPARKING" textAlign="CENTER"/>
				<m:MaterialLabel text="iParking is a web 3.0 application for Easy and Efficient Reservation of parking spots at your finger tips"/>	
				</m:MaterialCardContent>				
				</m:MaterialCard>				
				</m:MaterialColumn>
				</m:MaterialRow>
				</m:MaterialContainer>
				
				<m:MaterialFooter addStyleNames="{style.customFooter}"  backgroundColor="BLUE_DARKEN_4">
        <m:MaterialRow>
          <m:MaterialColumn grid="s12 m6 l6">
            <m:MaterialTitle textColor="WHITE" title="Contact Us"/>
            <m:MaterialImage textColor="WHITE" backgroundColor="RED" marginRight="12" marginTop="8" float="LEFT" width="40px" height="40px" shadow="1" circle="true" url="https://lh5.googleusercontent.com/-HQxxGNNP_j0/AAAAAAAAAAI/AAAAAAAAAAA/dPXtNz85Kh0/s128-c-k/photo.jpg"/>
             <m:MaterialIcon iconType="CALL" iconSize="SMALL" marginTop="8" marginRight="12"/>
             <m:MaterialIcon iconType="EMAIL" iconSize="SMALL" marginTop="8" marginRight="12" />
             <m:MaterialLabel text="Nikhil Tiwari"/>
             
             <m:MaterialImage textColor="WHITE" backgroundColor="RED" marginRight="12" marginTop="8" float="LEFT" width="40px" height="40px" shadow="1" circle="true" url="https://lh5.googleusercontent.com/-HQxxGNNP_j0/AAAAAAAAAAI/AAAAAAAAAAA/dPXtNz85Kh0/s128-c-k/photo.jpg"/>
             <m:MaterialIcon iconType="CALL" iconSize="SMALL" marginTop="8" marginRight="12"/>
             <m:MaterialIcon iconType="EMAIL" iconSize="SMALL" marginTop="8" marginRight="12" />
             <m:MaterialLabel text="Harshdeep Singh"/>
          </m:MaterialColumn>
          <m:MaterialColumn grid="s12 m6 l6">
            <m:MaterialTitle textColor="WHITE" title="iParking App" description="We Provode Easy and Efficient Reservation of parking spots at your finger tips"/>
            <m:MaterialButton ui:field="btnDownloadPhonegap" marginTop="18" text="iParking APK" waves="LIGHT"/>
          </m:MaterialColumn>
        </m:MaterialRow>
  
        <m:MaterialFooterCopyright addStyleNames="footer-copyright">
          <m:MaterialLabel text="Â© 2017 iParking" />
        </m:MaterialFooterCopyright>
      </m:MaterialFooter>
	</g:HTMLPanel>
</ui:UiBinder> 