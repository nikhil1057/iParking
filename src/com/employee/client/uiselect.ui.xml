	<g:HTMLPanel>
	<m:MaterialContainer>
	<m:MaterialHeader marginTop="0" paddingTop="0">
	<m:MaterialNavBar backgroundColor="BLUE_DARKEN_4" marginTop="1" paddingTop="1" activates="sidenav">
	<m:MaterialNavBrand textAlign="CENTER" text="iPARKING" fontSize="2.3em" marginLeft="16"/>
	<m:MaterialNavSection float="RIGHT">
	<m:MaterialLink ui:field="home" iconType="POLYMER" iconPosition="LEFT" text="HOME" textColor="WHITE" waves="LIGHT"/>
	<!--  
	<m:MaterialLink ui:field="card" iconType="POLYMER" iconPosition="LEFT" text="SELECT" textColor="WHITE" waves="LIGHT"/>
	-->
	<m:MaterialLink ui:field="rec" text="Register Area" iconType="POLYMER" textColor="WHITE"/>
	<m:MaterialLink ui:field="emp" text="Enter Tokens" iconType="POLYMER" textColor="WHITE"/>
	</m:MaterialNavSection>	
	</m:MaterialNavBar>	
	</m:MaterialHeader>
	

	 <m:MaterialRow addStyleNames="code">
      <m:MaterialRow>
        <m:MaterialColumn grid="l4 m6" >
          <m:MaterialCard backgroundColor="WHITE"  marginTop="40" shadow="4">
            <m:MaterialCardImage waves="LIGHT">
              <m:MaterialImage url="https://cdn.dribbble.com/users/285803/screenshots/1066705/dribbble.gif"/>
            </m:MaterialCardImage>

            <m:MaterialCardContent textColor="BLACK">
              <m:MaterialCardTitle text="Home" iconType="MORE_VERT" iconPosition="RIGHT" textColor="BLACK"/>
            </m:MaterialCardContent>

            <m:MaterialCardReveal>
              <m:MaterialCardTitle text="Home" iconType="CLOSE" iconPosition="RIGHT" textColor="BLACK"/>
              <m:MaterialLabel text="Go Back to Homepage And Let's Start Again." />
            </m:MaterialCardReveal>

            <m:MaterialCardAction>
              <m:MaterialLink text="Wanna Go to Homepage" textColor="BLUE" />
            </m:MaterialCardAction>
          </m:MaterialCard>
        </m:MaterialColumn>
        
        <m:MaterialColumn grid="l4 m8" addStyleNames="{style.fieldPanel}">
          <m:MaterialCard backgroundColor="WHITE"  marginTop="40" shadow="4">
            <m:MaterialCardImage waves="LIGHT">
              <m:MaterialImage url="https://cdn.dribbble.com/users/101441/screenshots/1241298/pins.gif"/>
            </m:MaterialCardImage>

            <m:MaterialCardContent textColor="BLACK">
              <m:MaterialCardTitle text="Register Area" iconType="MORE_VERT" iconPosition="RIGHT" textColor="BLACK"/>
            </m:MaterialCardContent>

            <m:MaterialCardReveal>
              <m:MaterialCardTitle text="Register Area" iconType="CLOSE" iconPosition="RIGHT" textColor="BLACK"/>
              <m:MaterialLabel text="Register Your Parking Area in One Simple Go." />
            </m:MaterialCardReveal>

            <m:MaterialCardAction>
              <m:MaterialLink text="Let Your Business Meet the World" textColor="BLUE"/>
        
            </m:MaterialCardAction>
          </m:MaterialCard>
        </m:MaterialColumn>

        <m:MaterialColumn grid="l4 m10" addStyleNames="{style.fieldPanel}">
          <m:MaterialCard backgroundColor="WHITE"  marginTop="40" shadow="4">
            <m:MaterialCardImage waves="LIGHT">
              <m:MaterialImage url="https://cdn.dribbble.com/users/46315/screenshots/1065283/icons-animation.gif"/>
            </m:MaterialCardImage>

            <m:MaterialCardContent textColor="BLACK">
              <m:MaterialCardTitle text="Enter Token" iconType="MORE_VERT" iconPosition="RIGHT" textColor="BLACK"/>
            </m:MaterialCardContent>

            <m:MaterialCardReveal>
              <m:MaterialCardTitle text="Enter Token" iconType="CLOSE" iconPosition="RIGHT" textColor="BLACK"/>
              <m:MaterialLabel text="Enter The No. of Vacant Spots Here " />
            </m:MaterialCardReveal>

            <m:MaterialCardAction>
              <m:MaterialLink text="Submit Your Tokens For Today" textColor="BLUE"/>
            </m:MaterialCardAction>
          </m:MaterialCard>
        </m:MaterialColumn>
        </m:MaterialRow>
        </m:MaterialRow>
	</m:MaterialContainer>
